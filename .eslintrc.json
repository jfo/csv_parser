{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "max-len": [
            "error",
            { "code": 80 },
            { "comments": 80 }
        ],
        "no-trailing-spaces": "error",
        "eol-last": [
          "error",
          "always"
        ],
        "no-console" : 0
    },
    "parser" : "babel-eslint"
}
